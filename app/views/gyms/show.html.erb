<body>
  <div id="title">
    Welcome to Trudy Fitness Center
  </div>
  <div>
     <% if @gym.check_tickets != false %>
         <h1> Position in Queue: <%= @gym.check_tickets %> </h1>
    <% end %>
  </div>

  <div id = "container">
    <div class="d-flex justify-content-center">
      <div id = "top">
        <h1>Top Floor</h1>
        <div class="d-flex justify-content-center">
          <div class="gym_values" id="label-container-child">
            <%= @gym.top_floor_occupancy %>
          </div>
          <div class="gym_values" id="label-container-child">
            /
          </div>
          <div class="gym_values" id="label-container-child">
            <%= @gym.top_floor_capacity %>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <div class="gym_labels" id="label-container-child">
            people currently in the gym
          </div>
          <div class="gym_labels" id="label-container-child">
            people allowed at maximum
          </div>
        </div>
      </div>
      <div id="wait">
        <h1>Queue</h1>
        <div class="d-flex justify-content-center">
          <div class="gym_values" id="label-container-child">
            <%= @gym.wait_top_floor %>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <div class="gym_labels" id="label-container-child">
            people waiting
          </div>
        </div>
      </div>
    </div>
  </div>
  
